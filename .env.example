# .env.example
# Copy this file to .env and configure your database settings

# Database Type: sqlite, postgresql, or mysql
DB_TYPE=sqlite

# SQLite Configuration (default)
DB_PATH=courtshoes_data.db

# PostgreSQL Configuration
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=courtshoes
# DB_USER=your_username
# DB_PASSWORD=your_password

# MySQL Configuration
# DB_TYPE=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=courtshoes
# DB_USER=your_username
# DB_PASSWORD=your_password

# Database Debugging
DB_ECHO=false
